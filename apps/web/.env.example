# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tessra

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
ADMIN_TOKEN=change-me-please-32chars

# --------- Job Queue Configuration ---------
JOBS_CONCURRENCY=5

# --------- Access Configuration ---------
# Options: "public" or "private"
DEFAULT_VISIBILITY=public

# --------- Storage Configuration ---------
# Options: "local" or "s3"
STORAGE_DRIVER=local

# Local Storage Settings (when STORAGE_DRIVER=local)
LOCAL_ROOT=.data
LOCAL_PUBLIC_BASE=http://localhost:3000/

# S3 Storage Settings (when STORAGE_DRIVER=s3)
# Note: Endpoint must include https:// protocol (e.g., https://s3.us-east-1.amazonaws.com)
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# --------- OCR Configuration ---------
# Enable OCR processing for uploaded images
OCR_ENABLED=false
OCR_LANG=eng

# Application
APP_NAME=Tessra
